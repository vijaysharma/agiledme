<div id="fileupload">
  <%= form_for WorkableItemAttachment.new, :html => { :multipart => true } do |f| %>
      <div class="fileupload-buttonbar">
          <label class="fileinput-button">
              <span>Add files...</span>
                <%= f.file_field :image, :multiple => true %>
                <%= f.hidden_field :workable_item_id, :value => -1 %>
          </label>
          <button type="submit" class="start">Start upload</button>
          <button type="reset" class="cancel">Cancel upload</button>
          <button type="button" class="delete">Delete files</button>
      </div>
  <% end %>
  <div class="fileupload-content">
      <table class="files"></table>
      <div class="fileupload-progressbar"></div>
  </div>
</div>

<%= render :partial => "workable_item_attachments/template-upload" %>
<%= render :partial => "workable_item_attachments/template-download" %>